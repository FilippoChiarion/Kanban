@model List<AtividadeModel>


<div class="container">
	<div class="row">
		<div class="col-4">

			<h1>Pendent</h1>

			@if (Model.Count() > 0)
			{
				@foreach (var atividade in Model.Where(x => x.Status.Nome == "Pendent"))
				{
					<div class="card text-center my-3">
						<div class="card-header bg-primary">
							@atividade.Status.Nome
						</div>
						<div class="card-body">
							<h5 class="card-title">@atividade.Titulo</h5>
							<p class="card-text">@atividade.Descricao</p>
							<a asp-action="MudarCard" asp-controller="Atividade" asp-route-id="@atividade.Id"><i class="bi bi-arrow-right-circle-fill fs-4"></i></a>
						</div>
						<div class="card-footer text-body-secondary">
							@atividade.DataCriacao.ToString("dd/MM/yyyy")
						</div>
					</div>
				}
			}

		</div>
		<div class="col-4">

			<h1>Doing</h1>

			@if (Model.Count() > 0)
			{
				@foreach (var atividade in Model.Where(x => x.Status.Nome == "Doing"))
				{
					<div class="card text-center my-3">
						<div class="card-header bg-warning">
							@atividade.Status.Nome
						</div>
						<div class="card-body">
							<h5 class="card-title">@atividade.Titulo</h5>
							<p class="card-text">@atividade.Descricao</p>
							<a asp-action="MudarCardAnterior" asp-controller="Atividade" asp-route-id="@atividade.Id"><i class="bi bi-arrow-left-circle-fill fs-4"></i></a>
							<a asp-action="MudarCard" asp-controller="Atividade" asp-route-id="@atividade.Id"><i class="bi bi-arrow-right-circle-fill fs-4 ms-4"></i></a>
							
						</div>
						<div class="card-footer text-body-secondary">
							@atividade.DataCriacao.ToString("dd/MM/yyyy")
						</div>
					</div>
				}
			}

		</div>
		<div class="col-4">

			<h1>Done</h1>

			@if (Model.Count() > 0)
			{
				@foreach (var atividade in Model.Where(x => x.Status.Nome == "Done"))
				{
					<div class="card text-center my-3">
						<div class="card-header bg-success">
							@atividade.Status.Nome
						</div>
						<div class="card-body">
							<h5 class="card-title">@atividade.Titulo</h5>
							<p class="card-text">@atividade.Descricao</p>
							<a asp-action="MudarCardAnterior" asp-controller="Atividade" asp-route-id="@atividade.Id"><i class="bi bi-arrow-left-circle-fill fs-4"></i></a>
							<a asp-action="Deletar" asp-controller="Atividade" asp-route-id="@atividade.Id"><i class="bi bi-trash3-fill fs-4 ms-4"></i></a>
						</div>
						<div class="card-footer text-body-secondary">
							@atividade.DataCriacao.ToString("dd/MM/yyyy")
						</div>
					</div>
				}
			}

		</div>

		</div>
	</div>
</div>